<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ES" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash Theme -->
    <style name="splashTheme" parent="Theme.ES">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.CircularBorder" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.CircularBorder_8" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="img_mainFragment" parent="ShapeAppearanceOverlay.CircularBorder">
        <item name="android:layout_width">@dimen/size_48</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:padding">@dimen/size_1</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="btn_mainFragment">
        <item name="android:backgroundTint">@drawable/btn_text_color_selector</item>
        <item name="android:layout_width">@dimen/size_96</item>
        <item name="android:layout_height">@dimen/size_96</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="btnAlarm_MainFragment" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/size_80</item>
        <item name="android:layout_height">@dimen/size_80</item>
        <item name="android:background">@drawable/round_button_white</item>
    </style>

    <style name="shapeImageView">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_height">92dp</item>
        <item name="android:background">@drawable/inset_elite_logo</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:elevation">@dimen/size_18</item>
        <item name="android:padding">@dimen/size_1</item>
    </style>

    <style name="profileImageShape">
        <item name="android:layout_width">@dimen/size_92</item>
        <item name="android:layout_height">@dimen/size_92</item>
        <item name="android:layout_margin">@dimen/margin_16dp</item>
        <item name="android:background">@color/main_screen</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">@dimen/size_1</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
    </style>

    <style name="button_blue_save" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppMaterialButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/button_disabled</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="textInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
        <item name="android:padding">@dimen/margin_8dp</item>
        <item name="android:elevation">@dimen/margin_8dp</item>
        <item name="android:drawablePadding">@dimen/margin_8dp</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">textPersonName|textMultiLine</item>
        <item name="android:background">@drawable/custom_input</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_textView</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!-- ProfileDialogTheme -->
    <style name="profileDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyle</item>
    </style>

    <style name="bottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>